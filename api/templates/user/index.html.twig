{# templates/user/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}User Index{% endblock %}

{% block body %}
    <h1>Profil utilisateur</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Pr√©nom</th>
                <th>Email</th>
                <th>Mot de passe</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.first_name_user }}</td>
                <td>{{ user.last_name_user }}</td>
                <td>{{ user.mail_user }}</td>
                <td>{{ user.password_user }}</td>
                <td>
                    <a href="{{ path('user_show', {id: user.id}) }}" class="btn btn-info">Show</a>
                    <a href="{{ path('user_edit', {id: user.id}) }}" class="btn btn-primary">Edit</a>
                    <form action="{{ path('user_delete', {id: user.id}) }}" method="post" style="display:inline;">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                        <button class="btn btn-danger" type="submit">Delete</button>
                    </form>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {#<a href="{{ path('user_new') }}" class="btn btn-success">Create new</a>#}
{% endblock %}
