{# templates/user/show.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}User Details{% endblock %}

{% block body %}
    <h1>User Details</h1>

    <p><strong>ID:</strong> {{ user.id }}</p>
    <p><strong>First Name:</strong> {{ user.first_name_user }}</p>
    <p><strong>Last Name:</strong> {{ user.last_name_user }}</p>
    <p><strong>Email:</strong> {{ user.mail_user }}</p>
    <p><strong>Password:</strong> {{ user.mail_user }}</p>

    <a href="{{ path('user_index') }}" class="btn btn-secondary">Back to list</a>
    <a href="{{ path('user_edit', {id: user.id}) }}" class="btn btn-primary">Edit</a>

    <form action="{{ path('user_delete', {id: user.id}) }}" method="post" style="display:inline;">
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
        <button class="btn btn-danger" type="submit">Delete</button>
    </form>
{% endblock %}
